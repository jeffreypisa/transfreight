{% set sectionno = '0' %}

{% for item in post.get_field('blokken') %}

  {% set sectionno = sectionno + '1' %}
  
  {% if item.acf_fc_layout == 'pageheader' %}
		{% include 'pagebuilder/pageheader.twig' %}
		
  {% elseif item.acf_fc_layout == 'contentblok' %}
		{% include 'pagebuilder/contentblok.twig' %}
		
  {% elseif item.acf_fc_layout == 'fullpage_slider' %}
		{% include 'pagebuilder/fullpage_slider.twig' %}

  {% endif %}
  
{% endfor %}